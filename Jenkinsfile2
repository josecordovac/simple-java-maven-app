pipeline {
    agent any
    
    tools {
        maven 'MavenJenkins'
    }
    
    stages {
        stage('Build') {
            steps {
                bat 'java -version'
                bat 'mvn -version'
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}
